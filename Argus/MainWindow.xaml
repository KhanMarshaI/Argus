<Window x:Class="Argus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Argus"
        mc:Ignorable="d"
        Title="Argus" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="usernameBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,205,0,0"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Center" Margin="0,260,0,0" VerticalAlignment="Top" Width="120" Password=""/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Width="120" Cursor="Hand" Click="Button_Click" AutomationProperties.Name="loginBtn"/>
        <Label Content="Login" HorizontalAlignment="Center" Margin="0,110,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold" FontSize="24" FontFamily="Segoe UI"/>
        <Label Content="Username" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold"/>
        <Label Content="Password" HorizontalAlignment="Center" Margin="0,230,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold"/>

    </Grid>
</Window>
