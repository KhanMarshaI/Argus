@page "/customintel"
@using ArgusFrontend.Models
@using ArgusFrontend.Services

<PageTitle>Administration</PageTitle>

<Microsoft.AspNetCore.Components.Authorization.AuthorizeView Roles="Administrator">
    <Authorized>

        <div class="container mt-5">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="display-6">Perform Administrative Tasks</h2>
                    <p class="lead">Create, view, and delete intel and entities.</p>
                </div>

                <div class="card-body">
                    <p>Use the buttons below to navigate to different administrative tasks:</p>
                </div>

                <div class="card-footer d-flex justify-content-center">
                    <button class="btn btn-primary mx-2"><a href="/customintel/fileintel" class="btn btn-primary">Create File intel</a></button>
                    <button class="btn btn-primary mx-2"><a href="/customintel/urlintel" class="btn btn-primary">Create URL intel</a></button>
                    <button class="btn btn-primary mx-2"><a href="/customintel/registeruser" class="btn btn-primary">Register User</a></button>
                    <button class="btn btn-primary mx-2"><a href="/customintel/logging" class="btn btn-primary">Logging</a></button>
                </div>
            </div>
        </div>

        
    </Authorized>
    <NotAuthorized>
        <div class="container text-center mt-5">
            <div class="card shadow-sm mx-auto" style="max-width: 400px; border-radius: 10px;">
                <div class="card-body">
                    <h1 class="display-4 text-danger"><i class="bi bi-shield-lock"></i></h1>
                    <h2 class="card-title text-dark">Access Denied</h2>
                    <p class="card-text text-muted">
                        You are not authorized to view this page. Please contact your administrator if you believe this is an error.
                    </p>
                    <a href="/" class="btn btn-primary btn-lg mt-3">
                        <i class="bi bi-house-door"></i> Go to Home
                    </a>
                </div>
            </div>
        </div>

    </NotAuthorized>
</Microsoft.AspNetCore.Components.Authorization.AuthorizeView>


